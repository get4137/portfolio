<%= form_with model: @url, local: true do |form| %>

  <% if @url.errors.any? %>
  <% @url.errors.full_messages.each do |msg| %>
    <div class='alert alert-danger'><%= msg %></div>
  <% end %>
<% end %>

  <p>
    <%= form.label :new_url %><br>
    <%= form.text_field(:new_url, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= form.submit(:class => 'btn btn-outline-primary btn-sm') %>
  </p>
<% end %>