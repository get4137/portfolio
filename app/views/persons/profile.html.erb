<h2>Your profile</h2>
<% if user_signed_in? %>
  <span>Hello, <%= current_user.nickname %></span>
  <span class="btn btn-outline-danger btn-sm"><%= link_to 'Log out', destroy_user_session_path, :method => :delete %></span>
<% else %>
  <span class="btn btn-outline-success btn-sm"><%= link_to 'Log in', new_user_session_path %></span> or <span class="btn btn-outline-success btn-sm"><%= link_to 'Sign up', new_user_registration_path %></span>
<% end %>
<hr>
