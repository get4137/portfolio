<h2>Notes</h2>
<%= link_to 'Add note', new_note_path(@note)%>
<div class="row">
  <%@notes.each do |t|%>
    <div class ="col-sm">
      <div>
        <%="nickname: #{t.user.nickname}"%>
      </div>
      <div>
        <%="note: #{t.message}"%>
      </div>
      <td><%= link_to 'Show', note_path(t) %></td>
    </div>
  <%end%>
</div>